<div class="profile-card white-bg">
    <div class="profile-card-img">
        <img src="{{path image}}" alt="Card Image">
    </div>
    <div class="profile-card-cntnt">
        <a href="#" class="profile-card-link">{{ name }}</a>
        <p class="profile-card-title">{{ title }}</p>
        <p><span class="icon"><i class="far fa-mobile" aria-hidden="true"></i></span> <a class="phone-no" href="tel:{{ phone }}">{{ phone }}</a>
        <br /><span class="icon"><i class="far fa-envelope" aria-hidden="true"></i></span> <a class="mail-info" href="mailto:{{ email }}">{{ email }}</a></p>
        <p class="profile-description">{{ content }}</p>
    </div>
</div>