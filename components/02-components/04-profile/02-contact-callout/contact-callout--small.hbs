<div class="contact-card">
    <div class="row align-items-center">
        <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-4 col-sm-12">
            <div class="staff-card-img">
                <img class="clip-top-img" src="{{path image}}" alt="Card Image" />
            </div>
        </div>
        <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-8 col-sm-12">
            <div class="staff-card-content">
                <h5>Contact</h5>
                <p class="staff-card-name">
                    <span class="first-name">{{ firstName }}</span>
                    <span class="last-name">{{ lastName }}</span>
                </p>
                <p class="staff-card-department">{{ department }}</p>
                <a class="mail-info" href="mailto:{{ email }}">{{ email }}</a>
            </div>
        </div>
    </div>
</div>