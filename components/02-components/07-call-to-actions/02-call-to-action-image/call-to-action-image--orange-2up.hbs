<section class="blue-content-img-design pt-5 pb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="images-design">
                    <img class="clip-top-img" src="{{path image }}" alt="Heading Image" />
                </div>
            </div>
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="heading-paragraph-design">
                    <h3>{{ headline }}</h3>
                    <div class="paragraph-text">
                        <p>{{ text }}</p>
                    </div>
                    <div class="blue-action-btn">
                        {{#each actions}}
                        {{#if @first}}
                        <a href="{{ url }}" class="action-btn"> {{ text }} <i class="fas fa-arrow-right"
                                aria-hidden="true"></i></a>
                        {{/if}}
                        {{#if @last}}
                        <a href="{{ url }}" class="action-btn"> {{ text }} <i class="fas fa-arrow-right"
                                aria-hidden="true"></i></a>
                        {{/if}}
                        {{/each}}

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
