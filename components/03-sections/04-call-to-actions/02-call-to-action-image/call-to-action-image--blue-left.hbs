<section class="content-img-design-sec blue-offset-bg undergraduate-studies-img-cntnt">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="images-design">
                    <img class="clip-top-img" src="{{path image }}" alt="Heading Image" />
                </div>
            </div>
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="heading-paragraph-design">
                    <h3>{{ headline }}</h3>
                    <div class="paragraph-text">
                        <p>{{ text }}</p>
                    </div>
                    {{#each actions}}
                    {{#if @first}}
                    <div class="orange-action-btn">
                        <a href="{{ url }}" class="action-btn"> {{ text }} <i class="fas fa-arrow-right"
                                aria-hidden="true"></i></a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>